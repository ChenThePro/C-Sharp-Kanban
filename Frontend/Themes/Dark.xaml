<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- צבעים -->
    <Color x:Key="PrimaryColor">#00FFFF</Color> <!-- Cyan -->
    <Color x:Key="BackgroundColor">#1E1E1E</Color> <!-- רקע כהה -->
    <Color x:Key="ForegroundColor">#E0FFFF</Color> <!-- טקסט בהיר עם נגיעה של Cyan -->
    <Color x:Key="PanelBackground">#2A2A2A</Color> <!-- אפור כהה -->

    <!-- מברשות -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}" />
    <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelBackground}" />

    <!-- שאר הסגנונות נשארים זהים -->

</ResourceDictionary>
<Window x:Class="MyApp.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome!" Height="400" Width="500">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="228" Width="369">
            <TextBlock Text="Welcome Bacck! 😊"
                       FontSize="16" FontWeight="Bold" Foreground="DarkBlue"
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <TextBlock Text="Username:"/>
            <TextBox Name="UsernameBox" Width="250"/>

            <TextBlock Text="Password:"/>
            <PasswordBox Name="PasswordBox" Width="250"/>

            <TextBlock Text="Forgot Password?" Foreground="Blue"
                       Cursor="Hand" MouseDown="ForgotPassword_Click"
                       HorizontalAlignment="Center" Margin="10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Login" Width="100" Margin="5" Click="LoginButton_Click"/>
                <Button Content="Register" Width="100" Margin="5" Click="RegisterButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="MyApp.View.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="450" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="455*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="2" Margin="44,0,0,0">
            <TextBlock Text="Join us today! Create your account 🎉"
                       FontSize="18" FontWeight="Bold" Foreground="DarkBlue"
                       HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <TextBlock Text="Username:" FontSize="14"/>
            <TextBox Name="UsernameBox" Width="300" Height="30"/>

            <TextBlock Text="Password:" FontSize="14" Margin="0,10,0,5"/>
            <PasswordBox Name="PasswordBox" Width="300" Height="30"/>

            <CheckBox Name="TermsCheckBox"
                      Content="I confirm that I have read and agree to the terms of service"
                      FontSize="12" HorizontalAlignment="Center" Margin="10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="15">
                <Button Content="Sign Up" Width="120" Height="35" Margin="5" Click="RegisterButton_Click"/>
                <Button Content="Back to Login" Width="120" Height="35" Margin="5" Click="BackToLogin_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
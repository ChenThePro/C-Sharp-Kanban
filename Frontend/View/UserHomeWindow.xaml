<Window x:Class="Frontend.View.UserHomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Kanban Dashboard"
        Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">

    <DockPanel>
        <materialDesign:Card DockPanel.Dock="Top"
                             Margin="20 20 20 10"
                             Padding="20"
                             materialDesign:ElevationAssist.Elevation="Dp3">
            <Grid>
                <TextBlock Text="Kanban Dashboard"
                           FontSize="24"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Foreground="{DynamicResource PrimaryBrush}"/>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center">

                    <ToggleButton x:Name="ThemeToggle"
                                  Width="45" Height="45"
                                  Margin="0,0,15,0"
                                  IsChecked="{Binding IsDarkTheme, Mode=TwoWay}"
                                  Checked="ThemeToggle_Checked"
                                  Unchecked="ThemeToggle_Unchecked"
                                  ToolTip="Toggle theme"
                                  Style="{StaticResource MaterialDesignActionToggleButton}"
                                  Background="Transparent"
                                  BorderBrush="Transparent">
                        <Grid>
                            <TextBlock Text="☀"
                                       FontSize="22"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       Visibility="{Binding IsDarkTheme, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                            <TextBlock Text="☾"
                                       FontSize="22"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       Visibility="{Binding IsDarkTheme, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Grid>
                    </ToggleButton>

                    <Button Content="Logout"
                            Click="Logout_Click"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <ScrollViewer DockPanel.Dock="Top" Margin="20 10 20 20">
            <StackPanel>

                <materialDesign:Card Padding="30"
                                     materialDesign:ElevationAssist.Elevation="Dp2"
                                     Width="960">
                    <TextBlock Text="Welcome to your Kanban board!"
                               FontSize="18"
                               HorizontalAlignment="Center"/>
                </materialDesign:Card>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0 0 0 10">
                    <TextBox Width="200"
                             Margin="0 10 10 0"
                             Text="{Binding NewBoardName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="New Board Name"/>
                    <Button Content="Create Board"
                            Click="CreateBoard_Click"/>
                </StackPanel>

                <ItemsControl ItemsSource="{Binding Boards}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Margin="0 0 0 20"
                                                 Padding="20"
                                                 materialDesign:ElevationAssist.Elevation="Dp1">
                                <StackPanel>
                                    <DockPanel MouseLeftButtonDown="ToggleBoardExpand">
                                        <StackPanel DockPanel.Dock="Left" Width="800">
                                            <TextBlock Text="{Binding Name, StringFormat=Name: \{0\}}"
                                                       FontWeight="Bold"
                                                       FontSize="16"/>
                                            <TextBlock Text="{Binding Owner, StringFormat=Owner: \{0\}}"
                                                       FontSize="14"/>
                                            <TextBlock Text="{Binding Members, Converter={StaticResource MembersToStringConverter}}"
                                                       FontSize="14"/>
                                        </StackPanel>

                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Content="❌"
                                                    Click="DeleteBoard_Click"
                                                    CommandParameter="{Binding}"/>
                                            <TextBlock Text="▼"
                                                       FontSize="16"
                                                       Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            <TextBlock Text="▶"
                                                       FontSize="16"
                                                       Visibility="{Binding IsExpanded, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </DockPanel>

                                    <ScrollViewer Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}"
                                                  HorizontalScrollBarVisibility="Auto">
                                        <ItemsControl ItemsSource="{Binding Columns}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <materialDesign:Card Margin="10 5"
                                                                         Padding="10"
                                                                         Width="300"
                                                                         VerticalAlignment="Top"
                                                                         BorderBrush="{DynamicResource PrimaryBrush}"
                                                                         BorderThickness="1"
                                                                         materialDesign:ElevationAssist.Elevation="Dp1">
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding Name, StringFormat=Column: \{0\}}"
                                                                       FontWeight="Bold"
                                                                       FontSize="14"
                                                                       MouseLeftButtonDown="ToggleColumnExpand"
                                                                       Cursor="Hand"
                                                                       Margin="0 0 0 10"/>

                                                            <TextBlock FontSize="12"
                                                                       Foreground="{DynamicResource PrimaryBrush}">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Text">
                                                                            <Setter.Value>
                                                                                <MultiBinding StringFormat="Tasks: {0}/{1}">
                                                                                    <Binding Path="Tasks.Count" />
                                                                                    <Binding Path="Limit" />
                                                                                </MultiBinding>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Limit}" Value="-1">
                                                                                <Setter Property="Text">
                                                                                    <Setter.Value>
                                                                                        <MultiBinding StringFormat="Tasks: {0}/∞">
                                                                                            <Binding Path="Tasks.Count" />
                                                                                        </MultiBinding>
                                                                                    </Setter.Value>
                                                                                </Setter>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>

                                                            <ItemsControl ItemsSource="{Binding Tasks}"
                                                                          Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Border Background="{DynamicResource BackgroundBrush}"
                                                                                BorderBrush="{DynamicResource PrimaryBrush}"
                                                                                BorderThickness="1"
                                                                                CornerRadius="8"
                                                                                Padding="10"
                                                                                Margin="5"
                                                                                Effect="{DynamicResource MaterialDesignShadowDepth1}">
                                                                            <StackPanel>
                                                                                <TextBlock Text="{Binding Title, StringFormat=📌 \{0\}}"
                                                                                           FontWeight="Bold"/>
                                                                                <TextBlock Text="{Binding DueDate, StringFormat=📅 \{0:dd/MM/yyyy\}}"/>
                                                                                <TextBlock Text="{Binding CreatedAt, StringFormat=🕓 \{0:dd/MM/yyyy\}}"/>
                                                                                <TextBlock Text="{Binding Assignee, StringFormat=👤 \{0\}}"/>
                                                                            </StackPanel>
                                                                        </Border>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </StackPanel>
                                                    </materialDesign:Card>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </StackPanel>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
<Window x:Class="Frontend.View.UserHomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Kanban Dashboard"
        Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <DockPanel>
        <!-- Header using HeaderCardStyle -->
        <materialDesign:Card DockPanel.Dock="Top"
                             Style="{StaticResource HeaderCardStyle}">
            <Grid>
                <TextBlock Text="Kanban Dashboard"
                           Style="{StaticResource HeaderTextStyle}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center">

                    <ToggleButton x:Name="ThemeToggle"
                                  Style="{StaticResource ThemeToggleStyle}"
                                  Width="45" Height="45"
                                  Margin="0,0,15,0"
                                  IsChecked="{Binding IsDarkTheme, Mode=TwoWay}"
                                  Checked="ThemeToggle_Checked"
                                  Unchecked="ThemeToggle_Unchecked"
                                  ToolTip="Toggle theme">
                        <Grid>
                            <TextBlock Text="☀"
                                       FontSize="22"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       Visibility="{Binding IsDarkTheme, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                            <TextBlock Text="☾"
                                       FontSize="22"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       Visibility="{Binding IsDarkTheme, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Grid>
                    </ToggleButton>

                    <Button Content="Logout"
                            Click="Logout_Click"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <ScrollViewer DockPanel.Dock="Top" Margin="20 10 20 20">
            <StackPanel>

                <!-- Welcome card using WelcomeCardStyle -->
                <materialDesign:Card Style="{StaticResource WelcomeCardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Welcome to your Kanban board!"
                                   Style="{StaticResource SubHeaderTextStyle}"
                                   HorizontalAlignment="Center"
                                   Foreground="White"/>
                        <TextBlock Text="Organize your tasks efficiently"
                                   Style="{StaticResource CaptionTextStyle}"
                                   HorizontalAlignment="Center"
                                   Foreground="#E0E0E0"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Create board section -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0 0 0 10">
                    <TextBox Width="200"
                             Margin="0 10 10 0"
                             Text="{Binding NewBoardName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="New Board Name"/>
                    <Button Content="Create Board"
                            Click="CreateBoard_Click"/>
                </StackPanel>

                <!-- Boards list using BoardCardStyle -->
                <ItemsControl ItemsSource="{Binding Boards}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Style="{StaticResource BoardCardStyle}">
                                <StackPanel>
                                    <DockPanel MouseLeftButtonDown="ToggleBoardExpand">
                                        <StackPanel DockPanel.Dock="Left" Width="800">
                                            <TextBlock Text="{Binding Name, StringFormat=Name: \{0\}}"
                                                       Style="{StaticResource SubHeaderTextStyle}"/>
                                            <TextBlock Text="{Binding Owner, StringFormat=Owner: \{0\}}"
                                                       Style="{StaticResource CaptionTextStyle}"
                                                       Margin="0,2"/>
                                            <TextBlock Text="{Binding Members, Converter={StaticResource MembersToStringConverter}}"
                                                       Style="{StaticResource CaptionTextStyle}"
                                                       Margin="0,2"/>
                                        </StackPanel>

                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Content="❌"
                                                    Style="{StaticResource DeleteButtonStyle}"
                                                    Click="DeleteBoard_Click"
                                                    CommandParameter="{Binding}"/>
                                            <TextBlock Text="▼"
                                                       FontSize="16"
                                                       Foreground="{StaticResource PrimaryBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="10,0,0,0"
                                                       Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            <TextBlock Text="▶"
                                                       FontSize="16"
                                                       Foreground="{StaticResource PrimaryBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="10,0,0,0"
                                                       Visibility="{Binding IsExpanded, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </DockPanel>

                                    <ScrollViewer Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}"
                                                  HorizontalScrollBarVisibility="Auto"
                                                  Margin="0,10,0,0">
                                        <ItemsControl ItemsSource="{Binding Columns}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <!-- Column using ColumnCardStyle -->
                                                    <materialDesign:Card Style="{StaticResource ColumnCardStyle}">
                                                        <StackPanel>
                                                            <DockPanel Margin="0 0 0 10">
                                                                <TextBlock Text="{Binding Name}"
                                                                           Style="{StaticResource SubHeaderTextStyle}"
                                                                           FontSize="16"
                                                                           MouseLeftButtonDown="ToggleColumnExpand"
                                                                           Cursor="Hand"
                                                                           DockPanel.Dock="Left"/>

                                                                <TextBlock Text="▼"
                                                                           FontSize="12"
                                                                           Foreground="{StaticResource PrimaryBrush}"
                                                                           VerticalAlignment="Center"
                                                                           HorizontalAlignment="Right"
                                                                           Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                                <TextBlock Text="▶"
                                                                           FontSize="12"
                                                                           Foreground="{StaticResource PrimaryBrush}"
                                                                           VerticalAlignment="Center"
                                                                           HorizontalAlignment="Right"
                                                                           Visibility="{Binding IsExpanded, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                                            </DockPanel>

                                                            <!-- Fixed: Task count TextBlock with proper style handling -->
                                                            <TextBlock Margin="0,0,0,10">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CaptionTextStyle}">
                                                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                                                                        <Setter Property="Text">
                                                                            <Setter.Value>
                                                                                <MultiBinding StringFormat="Tasks: {0}/{1}">
                                                                                    <Binding Path="Tasks.Count" />
                                                                                    <Binding Path="Limit" />
                                                                                </MultiBinding>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Limit}" Value="-1">
                                                                                <Setter Property="Text">
                                                                                    <Setter.Value>
                                                                                        <MultiBinding StringFormat="Tasks: {0}/∞">
                                                                                            <Binding Path="Tasks.Count" />
                                                                                        </MultiBinding>
                                                                                    </Setter.Value>
                                                                                </Setter>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>

                                                            <!-- Tasks using TaskCardStyle -->
                                                            <ItemsControl ItemsSource="{Binding Tasks}"
                                                                          Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Border Style="{StaticResource TaskCardStyle}">
                                                                            <StackPanel>
                                                                                <TextBlock Text="{Binding Title}"
                                                                                           FontWeight="SemiBold"
                                                                                           FontSize="14"
                                                                                           Margin="0,0,0,5"/>
                                                                                <TextBlock Text="{Binding DueDate, StringFormat=📅 Due: \{0:dd/MM/yyyy\}}"
                                                                                           Style="{StaticResource CaptionTextStyle}"
                                                                                           Margin="0,2"/>
                                                                                <TextBlock Text="{Binding CreatedAt, StringFormat=🕓 Created: \{0:dd/MM/yyyy\}}"
                                                                                           Style="{StaticResource CaptionTextStyle}"
                                                                                           Margin="0,2"/>
                                                                                <TextBlock Text="{Binding Assignee, StringFormat=👤 Assigned to: \{0\}}"
                                                                                           Style="{StaticResource CaptionTextStyle}"
                                                                                           Margin="0,2"/>
                                                                            </StackPanel>
                                                                        </Border>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </StackPanel>
                                                    </materialDesign:Card>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </StackPanel>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
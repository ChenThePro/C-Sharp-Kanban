<Window x:Class="Frontend.View.UserHomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}"
        Title="Kanban Dashboard" Height="800" Width="1000">

    <DockPanel Background="{DynamicResource MaterialDesignPaper}">

        <materialDesign:Card DockPanel.Dock="Top" Margin="20 20 20 10" Padding="20" materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid>
                <TextBlock Text="Kanban Dashboard" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" />
                <Button 
                    Content="Logout" 
                    Command="{Binding LogoutCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    HorizontalAlignment="Right"
                    materialDesign:ButtonAssist.CornerRadius="20"
                    Padding="20 5" />
            </Grid>
        </materialDesign:Card>

        <ScrollViewer DockPanel.Dock="Top" Margin="20 10 20 20">
            <StackPanel>

                <materialDesign:Card Margin="0 0 0 20" Padding="30" materialDesign:ElevationAssist.Elevation="Dp3">
                    <TextBlock Text="Welcome to your Kanban board!" 
                               FontSize="18" 
                               HorizontalAlignment="Center" 
                               Foreground="{DynamicResource MaterialDesignBodyLight}" />
                </materialDesign:Card>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 0 10">
                    <TextBox Width="200"
                             Margin="0 10 10 0"
                             Text="{Binding NewBoardName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="New Board Name"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    <Button Content="Create Board"
                            Command="{Binding CreateBoardCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}" />
                </StackPanel>

                <ItemsControl ItemsSource="{Binding Boards}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Margin="0 0 0 10" Padding="20" materialDesign:ElevationAssist.Elevation="Dp2">
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Left">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" />
                                        <TextBlock Text="{Binding Owner}" FontWeight="Bold" FontSize="16" />
                                        <TextBlock Text="{Binding Members}" FontWeight="Bold" FontSize="16" />
                                    </StackPanel>
                                    <Button Content="Delete"
                                            Command="{Binding DataContext.DeleteBoardCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            HorizontalAlignment="Right" />
                                </DockPanel>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>

    </DockPanel>
</Window>

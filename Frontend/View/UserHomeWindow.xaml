<Window x:Class="Frontend.View.UserHomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}"
        Title="Kanban Dashboard" Height="800" Width="1000">

    <DockPanel Background="{DynamicResource MaterialDesignPaper}">

        <materialDesign:Card DockPanel.Dock="Top" Margin="20 20 20 10" Padding="20" materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid>
                <TextBlock Text="Kanban Dashboard" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" />
                <Button 
                    Content="Logout" 
                    Command="{Binding LogoutCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    HorizontalAlignment="Right"
                    materialDesign:ButtonAssist.CornerRadius="20"
                    Padding="20 5" />
            </Grid>
        </materialDesign:Card>

        <ScrollViewer DockPanel.Dock="Top" Margin="20 10 20 20">
            <StackPanel>

                <materialDesign:Card Margin="0 0 0 20" Padding="30" materialDesign:ElevationAssist.Elevation="Dp3">
                    <TextBlock Text="Welcome to your Kanban board!" 
                               FontSize="18" 
                               HorizontalAlignment="Center" 
                               Foreground="{DynamicResource MaterialDesignBodyLight}" />
                </materialDesign:Card>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 0 10">
                    <TextBox Width="200"
                             Margin="0 10 10 0"
                             Text="{Binding NewBoardName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="New Board Name"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    <Button Content="Create Board"
                            Command="{Binding CreateBoardCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}" />
                </StackPanel>

                <ItemsControl ItemsSource="{Binding Boards}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Margin="0 0 0 10" Padding="20" materialDesign:ElevationAssist.Elevation="Dp2">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Stretch" MouseLeftButtonDown="ToggleBoardExpand">
                                        <StackPanel Width="800">
                                            <TextBlock Text="{Binding Name, StringFormat='Name: {0}'}" FontWeight="Bold" FontSize="16"  Foreground="Cyan" />
                                            <TextBlock Text="{Binding Owner, StringFormat='Owner: {0}'}" FontSize="14" />
                                            <TextBlock Text="{Binding Members, Converter={StaticResource MembersToStringConverter}}" FontSize="14" />
                                        </StackPanel>
                                        <Button Content="Delete"
                                            Command="{Binding DataContext.DeleteBoardCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            HorizontalAlignment="Right" />
                                        <TextBlock Text="▼" FontSize="16" Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}" />
                                        <TextBlock Text="▶" FontSize="16" Visibility="{Binding IsExpanded, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                                    </StackPanel>

                                    <ItemsControl ItemsSource="{Binding Columns}" Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <materialDesign:Card Margin="10 5" Padding="10" materialDesign:ElevationAssist.Elevation="Dp1">
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Name, StringFormat='Column: {0}'}" FontWeight="Bold" FontSize="14" Foreground="Cyan" MouseLeftButtonDown="ToggleColumnExpand" />
                                                        <TextBlock FontSize="12">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Text">
                                                                        <Setter.Value>
                                                                            <MultiBinding StringFormat="Limit: {0} / {1}">
                                                                                <Binding Path="Tasks.Count" />
                                                                                <Binding Path="Limit" />
                                                                            </MultiBinding>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Limit}" Value="-1">
                                                                            <Setter Property="Text" Value="Limit: No Limit" />
                                                                            <Setter Property="Foreground" Value="#FFB0F4FF" />
                                                                            <!-- Slight cyan tint -->
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        <ItemsControl ItemsSource="{Binding Tasks}" Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Border BorderThickness="0 0 0 1" BorderBrush="Gray" Padding="5">
                                                                        <StackPanel>
                                                                            <TextBlock Text="{Binding Title, StringFormat='Title: {0}'}" FontWeight="Bold"/>
                                                                            <TextBlock Text="{Binding DueDate, StringFormat='Due: {0:MM/dd/yyyy}'}"/>
                                                                            <TextBlock Text="{Binding CreatedAt, StringFormat='Created: {0:MM/dd/yyyy}'}"/>
                                                                            <TextBlock Text="{Binding Assignee, StringFormat='Assignee: {0}'}"/>
                                                                        </StackPanel>
                                                                    </Border>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </materialDesign:Card>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>

    </DockPanel>
</Window>

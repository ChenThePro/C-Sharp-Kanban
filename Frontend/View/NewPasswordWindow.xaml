<Window x:Class="Frontend.View.NewPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="New Password"
        Height="300" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">

    <Grid>
        <materialDesign:Card Margin="20" Padding="20" materialDesign:ElevationAssist.Elevation="Dp2">
            <StackPanel>
                <TextBlock Text="Enter your new password"
                           Margin="0 0 0 20"
                           FontSize="18"
                           FontWeight="Bold"/>

                <Grid x:Name="NewPasswordGrid" Margin="0 10"/>

                <Button Content="Reset Password"
                        Click="ResetPassword_Click"
                        HorizontalAlignment="Center"
                        Margin="0 20 0 0"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>
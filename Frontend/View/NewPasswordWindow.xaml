<Window x:Class="Frontend.View.NewPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="New Password"
        Height="300" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Grid>
        <materialDesign:Card Style="{DynamicResource HighlightCardStyle}" Margin="20">
            <StackPanel>
                <TextBlock Text="Enter your new password"
                           Style="{DynamicResource SubHeaderTextStyle}"
                           Margin="0,0,0,20"/>

                <Grid x:Name="NewPasswordGrid" Margin="0 10"/>

                <Button Content="Reset Password"
                        Style="{DynamicResource PrimaryButtonStyle}"
                        Click="ResetPassword_Click"
                        HorizontalAlignment="Center"
                        Margin="0 20 0 0"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>
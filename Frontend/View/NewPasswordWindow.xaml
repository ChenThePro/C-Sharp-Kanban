<Window x:Class="Frontend.View.NewPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Password" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Enter your new password" Margin="0 0 0 10"/>
            <PasswordBox
                x:Name="NewPasswordBox"
                PasswordChanged="NewPasswordBox_PasswordChanged"
                Margin="0 10"/>

            <Button Content="Reset Password" Click="ResetPassword_Click" Width="150" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
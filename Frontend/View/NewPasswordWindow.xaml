<Window x:Class="Frontend.View.NewPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="New Password" Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}"
        Background="White">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Enter your new password" Margin="0 0 0 10" Foreground="Black"/>

            <Grid Margin="0 10" x:Name="NewPasswordGrid" />

            <Button Content="Reset Password" Click="ResetPassword_Click" Width="150" HorizontalAlignment="Center"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#00ACC1"
                    Foreground="White"
                    materialDesign:ButtonAssist.CornerRadius="8" Margin="0 20 0 0"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="Frontend.View.VerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verify Code" Height="200" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Enter the code sent to your email:"/>
            <TextBox Margin="0 10" Text="{Binding InputCode, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Verify" Click="Verify_Click" Width="100" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
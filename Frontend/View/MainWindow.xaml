<Window x:Class="Frontend.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Frontend.View"
        xmlns:vm="clr-namespace:Frontend.ViewModel"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Welcome to Kanban"
        Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}">

    <Grid Background="#F5FAFF">
        <Border CornerRadius="20" Background="#FFFFFF" Margin="40" Padding="40" BorderBrush="#D0E3F0" BorderThickness="1">
            <TabControl Background="Transparent" FontSize="14" BorderThickness="0">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Padding" Value="15,8"/>
                        <Setter Property="FontWeight" Value="Normal"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#00ACC1"/>
                                <Setter Property="BorderBrush" Value="#00ACC1"/>
                                <Setter Property="BorderThickness" Value="0 0 0 2"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TabControl.Resources>

                <TabItem Header="Sign In">
                    <StackPanel Margin="30" VerticalAlignment="Center">
                        <TextBlock Text="Welcome Back" FontSize="26" FontWeight="Bold" Margin="0 0 0 30" HorizontalAlignment="Center" Foreground="#263238"/>

                        <TextBox Margin="0 10"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:HintAssist.Hint="Email"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Background="White"
                                 Foreground="Black"
                                 CaretBrush="Black"
                                 Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Grid Margin="0 10" x:Name="SignInPasswordGrid" />

                        <Button x:Name="ForgotPasswordButton" Content="Forgot Password?" Click="ForgotPassword_Click"
                                Visibility="Collapsed"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                HorizontalAlignment="Center" Margin="0 10 0 0" Foreground="#00ACC1"/>

                        <Button Content="Sign In" Click="SignIn_Click"
                                Margin="0 30"
                                HorizontalAlignment="Center"
                                Width="150" Height="45"
                                Foreground="White" Background="#00ACC1"
                                FontWeight="Bold" FontSize="16"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="20" />
                    </StackPanel>
                </TabItem>

                <TabItem Header="Sign Up">
                    <StackPanel Margin="30" VerticalAlignment="Center">
                        <TextBlock Text="Create an Account" FontSize="26" FontWeight="Bold" Margin="0 0 0 30" HorizontalAlignment="Center" Foreground="#263238"/>

                        <TextBox Margin="0 10"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:HintAssist.Hint="Email"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Background="White"
                                 Foreground="Black"
                                 CaretBrush="Black"
                                 Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Grid Margin="0 10" x:Name="SignUpPasswordGrid" />
                        <Grid Margin="0 10" x:Name="ConfirmPasswordGrid" />

                        <Button Content="Sign Up" Click="SignUp_Click"
                                Margin="0 30"
                                HorizontalAlignment="Center"
                                Width="150" Height="45"
                                Foreground="White" Background="#00ACC1"
                                FontWeight="Bold" FontSize="16"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="20" />
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</Window>

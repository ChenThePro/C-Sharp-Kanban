<Window x:Class="Frontend.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Frontend.View"
        xmlns:vm="clr-namespace:Frontend.ViewModel"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Welcome to Kanban"
        Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}">

    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <materialDesign:Card Margin="40" Padding="40" materialDesign:ElevationAssist.Elevation="Dp4">
            <TabControl>
                <TabItem Header="Sign In">
                    <StackPanel Margin="10" VerticalAlignment="Center">
                        <TextBlock Text="Welcome Back" FontSize="24" FontWeight="Bold" Margin="0 0 0 30" HorizontalAlignment="Center"/>

                        <TextBox
                            Margin="0 10"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            materialDesign:HintAssist.Hint="Email"
                            Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <PasswordBox
                            Margin="0 10"
                            Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                            materialDesign:HintAssist.Hint="Password"
                            PasswordChanged="PasswordBox_PasswordChanged"/>

                        <Button
                            x:Name="ForgotPasswordButton"
                            Content="Forgot Password?"
                            Click="ForgotPassword_Click"
                            Visibility="Collapsed"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalAlignment="Center"
                            Margin="0 10 0 0"/>


                        <Button
                            Content="Sign In"
                            Click="SignIn_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="0 30"
                            HorizontalAlignment="Center"
                            Width="150" />
                    </StackPanel>
                </TabItem>

                <TabItem Header="Sign Up">
                    <StackPanel Margin="10" VerticalAlignment="Center">
                        <TextBlock Text="Create an Account" FontSize="24" FontWeight="Bold" Margin="0 0 0 30" HorizontalAlignment="Center"/>

                        <TextBox
                            Margin="0 10"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            materialDesign:HintAssist.Hint="Email"
                            Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <PasswordBox
                            Margin="0 10"
                            Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                            materialDesign:HintAssist.Hint="Password"
                            PasswordChanged="PasswordBox_PasswordChanged"/>

                        <PasswordBox
                            Margin="0 10"
                            Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                            materialDesign:HintAssist.Hint="Confirm Password"
                            PasswordChanged="ConfirmPasswordBox_PasswordChanged" />

                        <Button
                            Content="Sign Up"
                            Click="SignUp_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="0 30"
                            HorizontalAlignment="Center"
                            Width="150" />
                    </StackPanel>
                </TabItem>
            </TabControl>
        </materialDesign:Card>
    </Grid>
</Window>
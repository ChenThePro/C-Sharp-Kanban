<Window x:Class="MyApp.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="welcome!" Height="300" Width="400">
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="101*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="240*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Grid.ColumnSpan="3" Margin="27,0,0,0" Height="181" Width="351" Grid.Column="1">
            <TextBlock Text="welcome! we are happy to see you here 🙌" 
                       FontSize="16" FontWeight="Bold" Foreground="DarkBlue"
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <TextBlock Text="User Name:"/>
            <TextBox Name="UsernameBox" Width="250"/>

            <TextBlock Text="Password:"/>
            <PasswordBox Name="PasswordBox" Width="250"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Sign In" Width="100" Margin="5" Click="LoginButton_Click"/>
                <Button Content="Register" Width="100" Margin="5" Click="RegisterButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
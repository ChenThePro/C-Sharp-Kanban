<Window x:Class="Frontend.View.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reset Password" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Enter your email to reset password" Margin="0 0 0 20"/>
            <TextBox x:Name="EmailBox" Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0 10"/>
            <Button Content="Send Code" Click="SendCode_Click" Width="120" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
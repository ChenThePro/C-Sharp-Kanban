<Window x:Class="Frontend.View.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Reset Password"
        Height="300" Width="600"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}"
        Background="#121212">

    <Grid>
        <materialDesign:Card Margin="20" Padding="20" Background="#2A2D3E" materialDesign:ElevationAssist.Elevation="Dp2">
            <StackPanel>
                <TextBlock Text="Enter your email to reset password"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0 0 0 20"
                           Foreground="#E0E0E0"/>

                <TextBox x:Name="EmailBox"
                         Margin="0 10"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="Email"
                         Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <Button Content="Send Code"
                        Click="SendCode_Click"
                        Width="120"
                        HorizontalAlignment="Center"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="#00ACC1"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        materialDesign:ButtonAssist.CornerRadius="20"
                        Margin="0 20 0 0"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>